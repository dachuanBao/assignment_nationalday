<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#ECECEC"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    tools:context="com.learn.bdc.nationalsday.MoneyRecordActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"

        android:orientation="horizontal">
        <Button
            android:id="@+id/pay_button"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="#1895DF"
            android:textSize="20sp"
            android:text="支出"/>
        <Button
            android:id="@+id/income_button"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="#ffffff"
            android:textSize="20sp"
            android:text="收入"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/reason_img"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/type_big_1"/>
                    <TextView
                        android:id="@+id/reason_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="27sp"
                        android:layout_gravity="center"
                        android:text="一般"/>

                </LinearLayout>


            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="#dddddd"/>-->

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="#cccccc"/>-->

            <RelativeLayout

                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:layout_height="match_parent">
                <Spinner
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/route_sp"
                    android:gravity="left"
                    android:layout_width="130dp"
                    android:background="@drawable/bg_round_rectangle"
                    android:layout_height="38dp">
                </Spinner>

                <EditText
                    android:id="@+id/output_et"
                    android:layout_toRightOf="@id/route_sp"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:background="#ECECEC"
                    android:layout_alignBottom="@id/route_sp"

                    android:focusable="false"
                    android:singleLine="true"

                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="right|center_vertical"


                    />

            </RelativeLayout>





    </LinearLayout>
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <GridView

            android:id="@+id/income_gv"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:numColumns="4"
            android:columnWidth="50dp"

            android:horizontalSpacing="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </GridView>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/num_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ECECEC"
                    android:textSize="20sp"

                    android:layout_weight="1"

                    android:text="1"/>
                <Button
                    android:id="@+id/num_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ECECEC"

                    android:textSize="20sp"

                    android:layout_weight="1"
                    android:text="4"/>
                <Button
                    android:id="@+id/num_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ECECEC"
                    android:textSize="20sp"

                    android:layout_weight="1"
                    android:text="7"/>
                <Button
                    android:id="@+id/num_ac"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ECECEC"
                    android:textSize="20sp"

                    android:layout_weight="1"
                    android:text="AC"/>



            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/num_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ECECEC"
                    android:textSize="20sp"

                    android:layout_weight="1"
                    android:text="2"/>
                <Button
                    android:id="@+id/num_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ECECEC"
                    android:textSize="20sp"

                    android:layout_weight="1"
                    android:text="5"/>
                <Button
                    android:id="@+id/num_8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ECECEC"
                    android:layout_weight="1"
                    android:textSize="20sp"

                    android:text="8"/>
                <Button
                    android:id="@+id/num_zero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ECECEC"
                    android:textSize="20sp"

                    android:layout_weight="1"
                    android:text="0"/>



            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="20sp"

                android:layout_height="match_parent">
                <Button
                    android:id="@+id/num_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ECECEC"
                    android:layout_weight="1"
                    android:textSize="20sp"

                    android:text="3"/>
                <Button
                    android:id="@+id/num_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ECECEC"
                    android:layout_weight="1"
                    android:textSize="20sp"

                    android:text="6"/>
                <Button
                    android:id="@+id/num_9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ECECEC"
                    android:layout_weight="1"
                    android:textSize="20sp"

                    android:text="9"/>
                <Button
                    android:id="@+id/num_point"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ECECEC"
                    android:layout_weight="1"
                    android:textSize="20sp"

                    android:text="."/>



            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/num_del"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="20sp"
                    android:background="#ECECEC"
                    android:layout_weight="1"
                    android:text="del "/>
                <Button
                    android:id="@+id/num_add"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="20sp"

                    android:background="#ECECEC"
                    android:layout_weight="1"
                    android:text="+"/>
                <Button
                    android:id="@+id/num_ok"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#ECECEC"
                    android:textSize="20sp"

                    android:layout_weight="2"
                    android:text="OK"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
