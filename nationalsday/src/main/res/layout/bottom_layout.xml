<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/bottom_line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineView"
            android:background="@color/selected_color"
            />


        <TextView
            android:id="@+id/bottom_notebook"
            android:layout_marginTop="@dimen/bottom_text_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/selected_color"
            android:textSize="@dimen/bottom_text_size"
            android:text="@string/bottom_navigation_notebook"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/bottom_line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineView"
            android:background="@color/unselected_color"
            />


        <TextView
            android:id="@+id/bottom_bill"
            android:layout_marginTop="@dimen/bottom_text_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/unselected_color"
            android:textSize="@dimen/bottom_text_size"
            android:text="@string/bottom_navigation_myBill"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/bottom_line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineView"
            android:background="@color/unselected_color"
            />


        <TextView
            android:id="@+id/bottom_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottom_text_margin_top"
            android:textColor="@color/unselected_color"
            android:textSize="@dimen/bottom_text_size"
            android:text="@string/bottom_navigation_myAccount"/>

    </LinearLayout>





</LinearLayout>